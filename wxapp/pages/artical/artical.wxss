.container_page {
      background: whitesmoke;
      padding: 0 30rpx;
}

.title {
      font-size: 60rpx;
      font-weight: bold;
      margin: 20rpx 0;
}

.banner {
      width: 100%;
      height: 360rpx;
      margin-top: 20rpx;
      background-color: #eee;
      border-top-left-radius: 20rpx;
      border-top-right-radius: 20rpx;
}

.summary {
      width: 100%;
      box-sizing: border-box;
      padding: 20rpx;
      background-color: #eee;
      margin-bottom: 20rpx;
      color: #888;
      font-size: 26rpx;
      line-height: 1.8;
      border-bottom-left-radius: 20rpx;
      border-bottom-right-radius: 20rpx;
}

.sundry {
      display: flex;
      justify-content: space-between;
      font-size: 24rpx;
      color: #888;
      margin: 60rpx 0;
}

.sundry .author{
      margin-bottom: 20rpx;
}

.video {
      margin-top: 40rpx;
}

.paragraph_items {
      font-size: 26rpx;
      letter-spacing: 2rpx;
      line-height: 1.8;
      padding-bottom: 80rpx;
      color: #333;
      text-align: justify;
}

.btn_back_index {
      right: 40rpx;
      bottom: 40rpx;
      font-size: 28rpx;
      padding: 10rpx 20rpx;
      border-radius: 8rpx;
      border: 4rpx solid black;
}