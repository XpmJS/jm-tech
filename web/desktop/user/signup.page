<include src="__WEB_ROOT__/desktop/common/head.page"  />

<!-- 用户注册表单 -->
<form	class="iframe-form"  mp:if="{{option.user_mobile_signup_on == 1}}"
		method="POST" 
		action="/_api/xpmsns/user/user/create" 
		success="(data) => {
			// 打开登录成功面板
			$('.iframe-form').addClass('uk-hidden');
			$('.success').removeClass('uk-hidden');

			// 调整高度
			$validate.utils.parentHeight();

			// 计时器读秒后转向登录页面
			$validate.utils.timer('.timer', function(){
				window.location = '/user/signin/mobile';
			}, 5 );
		}" 
	>

	<div class="uk-margin">
		<h3>注册{{site.site_name}} <span uk-loading="ratio:0.8" class="uk-margin-small-left"></span></h3>
	</div>
	
	<!-- 呈现错误信息 -->
	<div class="message uk-alert-danger uk-hidden" uk-alert> <p></p></div>

	<!-- 手机号 -->
	<div class="uk-form-group uk-margin" id="testit">
		<div class="uk-inline">
			<span class="uk-form-icon" uk-icon="icon: phone"></span>
			<input name="mobile" type="text" class="uk-input uk-form-large" 
				   placeholder="请输入手机号" 
				   validate="{
				   		required:true, 
				   		messages: {
							required:'请填写手机号码'
				   		}
				   	}
				   ">
		</div>
		<div class="uk-helper uk-helper-danger"></div>
	</div> <!-- END 手机号 -->
	
	<!-- 图形验证码 -->
	<div class="uk-form-group uk-margin">
		<div class="uk-flex">
			<div class="uk-margin-right">
				<div class="uk-inline">
					<span class="uk-form-icon" uk-icon="icon: nut"></span>
					<input name="_vcode" type="text" class="uk-input uk-form-large" 
						   placeholder="图形验证码" 
						   validate="{
						   		required:true, 
						   		messages: {
									required:'请填写图形验证码'
						   		}
						   	}">
				</div>
			</div>
			<div class="image vcode uk-form-large">
				<div><img src="/_api/xpmsns/user/user/vcode?width=150&height=40&size=20" width="150" uk-image> </div>
				<div class="uk-text-muted">看不清？点击刷新</div>
			</div>
		</div>
		<div class="uk-helper uk-helper-danger"></div>
	</div> <!--  END 图形验证码 -->

	<!-- 短信验证码 -->
	<div class="uk-form-group uk-margin">
		<div class="uk-flex">
			<div class="uk-margin-right">
				<div class="uk-inline">
					<span class="uk-form-icon" uk-icon="icon: mail"></span>
					<input name="smscode" type="text" class="uk-input uk-form-large" 
						   placeholder="短信验证码" 
						   validate="{
							   	required:true, 
							   	messages: {
									required:'请填写短信验证码'
							   	}
						   }">
				</div>
			</div>
			<div class="uk-padding-remove">
				<button class="uk-button uk-button-primary uk-form-large smscode uk-action" style="width:150px;" type="button">发送验证码</button>
			</div>
		</div>
		<div class="uk-helper uk-helper-danger"></div>
	</div> <!--  END 短信验证码 -->

	<!-- 密码 -->
	<div class="uk-form-group uk-margin" mp:if="{{option.user_sms_on == 1}}" >
		<div class="uk-inline">
			<span class="uk-form-icon" uk-icon="icon: lock"></span>
			<input name="password" type="password" class="uk-input uk-form-large" 
				   placeholder="请设定登录密码" 
				   validate="{
					   	required:true,
					   	minlength:6,
					   	maxlength:15,
					   	messages: {
							required:'请设定登录密码',
							minlength: '密码长度不能少于6位',
							maxlength: '密码长度不能超过11位'
					   	}
					}">
		</div>
		<div class="uk-helper uk-helper-danger"></div>
	</div> <!-- END 密码 -->

	<!-- 密码确认 -->
	<div class="uk-form-group uk-margin">
		<div class="uk-inline">
			<span class="uk-form-icon" uk-icon="icon: lock"></span>
			<input name="repassword" type="password" class="uk-input uk-form-large" 
				   placeholder="请再次输入登录密码" 
				   validate="{
					   	required:true, 
					   	minlength:6,
					   	maxlength:15,
					   	messages: {
							required:'请设定登录密码',
							minlength: '密码长度不能少于6位',
							maxlength: '密码长度不能超过11位'
					   	}
					}">
		</div>
		<div class="uk-helper uk-helper-danger"></div>
	</div> <!-- END 密码确认 -->

	
	<!-- 注册按钮 -->
	<div class="uk-margin">
		<button class="uk-button uk-button-primary uk-form-large uk-action" style="width:100%;" type="submit">注册</button>
	</div><!-- END 注册按钮 -->
	
	<!-- 登录提醒 -->
	<div class="uk-margin">
		<a href="/user/signin/wechat" class="wechat text-wechat push-15-r" mp:if="{{option.user_wechat_on == 1}}"  > 
			<span uk-icon="icon: weixin"></span> 使用微信登录
		</a>

		<a href="/user/signin/mobile" class="default" mp:if="{{option.user_mobile_on == 1}}" > 
			已有账号？直接登录
		</a>
	</div>

</form> <!-- END 用户注册表单 -->

<!-- 未开放注册 -->
<form class="iframe-form"  mp:else >
	
	<div class="uk-margin">
		<h3>注册{{site.site_name}}</h3>
	</div>

	<div class="uk-margin">
		<div class="uk-alert-danger" uk-alert> <p> 暂未开放用户注册 </p> </div>
	</div>

	<div class="uk-margin">
		<a href="/user/signin/wechat" class="wechat text-wechat push-15-r" mp:if="{{option.user_wechat_on == 1}}"  > 
			<span uk-icon="icon: weixin"></span> 使用微信登录
		</a>

		<a href="/user/signin/mobile" class="default" mp:if="{{option.user_mobile_on == 1}}" > 
			已有账号？直接登录
		</a>
	</div>

</form> <!-- END 未开放注册 -->


<!-- 注册成功面板 -->
<form class="iframe-form success uk-hidden" >
	<div class="uk-margin">
		<h3>注册{{site.site_name}}</h3>
	</div>
	<div class="uk-alert-success" uk-alert> 
		<p> <span uk-icon="icon: check"></span> 注册成功!  <spacn class="timer">5</spacn> 秒后转向登录 </p> 
	</div>
	<!-- 登录按钮 -->
	<div class="uk-margin">
		<a href="/user/signin/mobile" class="uk-button uk-button-primary uk-form-large uk-action" style="width:100%;" >立即登录</a>
	</div><!-- END 登录按钮 -->
</form>


