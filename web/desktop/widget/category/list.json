{	
	"cname":"页面部件-分类列表",
	"type":"component",
	"data": {
		"site":{
			"api":"/xpmsns/pages/siteconf/get",
			"query":{
				"site_slug":"global",
				"select":"*"
			}
		},
		"articles":{
			"api":"/xpmsns/pages/article/search",
			"query":{
				"perpage":20,
				"order":"publish_time desc",
				"categoryId":"{{__var.cid}}",
				"subcateId":"{{__get.subcate}}",
				"page":"{{__get.page}}"
			}
		}
	},
	"entries":[
		{"method":"GET", "router":"/widget/category/list/{cid:[0-9a-zA-Z_]+}", "ttl":0}
	],
	"alias": {
		"mobile":"/mobile/widget/category/list",
		"wechat":"/mobile/widget/category/list",
		"wxapp": "/widget/category/list"
	}
}