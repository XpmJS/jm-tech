.mask {
      position: fixed;
      top: 0;
      width: 100vw;
      height: 100vh;
      background: rgba(0, 0, 0, 0.6);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 98;
} 

.color_main {
      color: var(--color_sub);
      font-weight: bold;
}

.checkin_wrap {
      position: relative;
      width: 560rpx;
      background: white;
      border-radius: 20rpx;
      padding-bottom: 10rpx;
      display: flex;
      flex-direction: column;
      align-items: center;
}

.btn_close {
      position: absolute;
      top: 20rpx;
      right: 20rpx;
      width: 40rpx;
      height: 40rpx;
}

.img_decoration {
      width: 100%;
      height: 210rpx;
      margin-top: -36rpx;
}

.btn_goto_index {
      width: 240rpx;
      height: 72rpx;
      background: rgba(228, 155, 174, 0.3);
      border-radius: 72rpx;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 28rpx;
      color: var(--color_main);
      box-sizing: border-box;
      margin: 20rpx auto 30rpx;
}

.title {
      text-align: center;
      margin: 40rpx;
}

.checkin_items {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      padding: 0 40rpx;
}

.checkin_item {
      width: 60rpx;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 30rpx;
}

.checkin_item .smalltitle {
      font-weight: bold;
      font-size: 20rpx;
}

.checkin_item .icon_star {
      width: 60rpx;
      height: 60rpx;
      margin: 20rpx 0 10rpx;
}

.checkin_item .credit {
      font-size: 18rpx;
      color: #888;
}

.checkin_items .icon_next {
      width: 0;
      height: 0;
      border-width: 10rpx;
      border-style: solid;
      border-color: transparent transparent transparent #333;
      margin: -8rpx 30rpx 0;
}